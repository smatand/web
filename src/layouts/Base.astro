---
interface Props {
  title: string;
}

const { title } = Astro.props;
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>~smatand - {title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;600&display=swap");

      * { margin: 0; padding: 0; box-sizing: border-box; }

      html {
        overflow-y: scroll;
      }

      body {
        background: #000000;
        background-attachment: fixed;
        color: #e0e0e0;
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        font-size: 16px;
        line-height: 1.7;
        user-select: auto;
      }

      /* ‚ïê‚ïê‚ïê TOP BANNER ‚ïê‚ïê‚ïê */
      .banner {
        background: linear-gradient(180deg, #000000 0%, #000000 100%);
        border-bottom: 3px solid #000000;
        text-align: center;
        padding: 28px 20px 22px;
      }

      .banner h1 {
        font-family: Georgia, "Times New Roman", serif;
        font-size: 32px;
        font-weight: 400;
        color: #e0e0e0;
        letter-spacing: 3px;
      }

      .banner h1 span {
        color: #ff8c00;
      }

      .banner .tagline {
        font-size: 11px;
        color: #888;
        margin-top: 6px;
        letter-spacing: 1px;
        text-transform: uppercase;
      }

      /* ‚ïê‚ïê‚ïê NAVIGATION ‚ïê‚ïê‚ïê */
      .navbar {
        background: #000000;
        border-bottom: 1px solid #333;
        padding: 0;
        display: flex;
        justify-content: center;
      }

      .navbar a {
        display: inline-block;
        padding: 10px 24px;
        color: #aaa;
        text-decoration: none;
        font-size: 12px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-right: 1px solid #333;
        transition: background 0.2s, color 0.2s;
      }

      .navbar a:first-child {
        border-left: 1px solid #333;
      }

      .navbar a:hover,
      .navbar a.active {
        background: #ff8c00;
        color: #fff;
      }

      /* ‚ïê‚ïê‚ïê THEME TOGGLE ‚ïê‚ïê‚ïê */
      .theme-toggle {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 10px;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .toggle-switch {
        position: relative;
        width: 40px;
        height: 20px;
        background: #333;
        border: 1px solid #555;
        cursor: pointer;
        transition: background 0.3s;
      }

      .toggle-switch::after {
        content: "";
        position: absolute;
        top: 2px;
        left: 2px;
        width: 14px;
        height: 14px;
        background: #ff8c00;
        transition: left 0.3s;
      }

      .toggle-switch.active::after {
        left: 22px;
      }

      /* Light mode styles */
      body.light-mode {
        background: #e0e0e0;
      }

      body.light-mode .banner {
        background: linear-gradient(180deg, #e0e0e0 0%, #e0e0e0 100%);
      }

      body.light-mode .navbar {
        background: #e0e0e0;
      }

      body.light-mode .sidebar {
        background: #e0e0e0;
      }

      body.light-mode .content {
        background: #e0e0e0;
      }

      body.light-mode .footer {
        background: #e0e0e0;
      }

      body.light-mode .xp-card,
      body.light-mode .gallery .photo-card,
      body.light-mode .tag {
        background: #e0e0e0;
      }

      body.light-mode .sidebar .counter-box {
        background: #d0d0d0;
      }

      body.light-mode {
        color: #222;
      }

      body.light-mode .banner h1 {
        color: #222;
      }

      body.light-mode .navbar a {
        color: #555;
      }

      body.light-mode .navbar a:hover,
      body.light-mode .navbar a.active {
        background: #ff8c00;
        color: #fff;
      }

      body.light-mode .sidebar .widget p,
      body.light-mode .sidebar .widget-title {
        color: #333;
      }

      body.light-mode .sidebar .links-list a {
        color: #555;
      }

      body.light-mode .sidebar .counter-box {
        color: #ff8c00;
        border: 1px solid #ccc;
      }

      body.light-mode .sidebar .counter-label {
        color: #666;
      }

      body.light-mode .content h2,
      body.light-mode .content h3 {
        color: #222;
      }

      body.light-mode .content p,
      body.light-mode .content a {
        color: #333;
      }

      body.light-mode .xp-card {
        border: 1px solid #ccc;
      }

      body.light-mode .tag {
        border: 1px solid #ccc;
        color: #555;
      }

      body.light-mode .gallery .photo-card {
        border: 1px solid #ccc;
      }

      body.light-mode .footer {
        color: #666;
        border-top: 3px solid #e0e0e0;
      }

      body.light-mode .footer a {
        color: #555;
      }

      /* ‚ïê‚ïê‚ïê LAYOUT: sidebar + content ‚ïê‚ïê‚ïê */
      .page {
        max-width: 960px;
        margin: 0 auto;
        display: flex;
        gap: 0;
        min-height: 70vh;
      }

      /* ‚ïê‚ïê‚ïê SIDEBAR ‚ïê‚ïê‚ïê */
      .sidebar {
        width: 200px;
        flex-shrink: 0;
        background: #000000;
        border-right: 1px solid #333;
        padding: 20px 16px;
        font-size: 12px;
      }

      .sidebar .widget {
        margin-bottom: 24px;
      }

      .sidebar .widget-title {
        font-size: 10px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: #ff8c00;
        border-bottom: 1px solid #333;
        padding-bottom: 6px;
        margin-bottom: 10px;
        font-weight: bold;
      }

      .sidebar .widget p {
        color: #999;
        line-height: 1.6;
      }

      .sidebar .widget a {
        color: #7ec8e3;
        text-decoration: none;
      }

      .sidebar .widget a:hover {
        text-decoration: underline;
      }

      .sidebar .links-list {
        list-style: none;
      }

      .sidebar .links-list li {
        padding: 3px 0;
      }

      .sidebar .links-list a {
        color: #7ec8e3;
        text-decoration: none;
        font-size: 12px;
      }

      .sidebar .links-list a:hover {
        color: #ff8c00;
      }

      .sidebar .links-list a::before {
        content: "¬ª ";
        color: #555;
      }

      .sidebar .counter-box {
        background: #111;
        border: 1px solid #333;
        padding: 8px;
        text-align: center;
        color: #ff8c00;
        font-family: "Courier New", monospace;
        font-size: 14px;
        font-weight: bold;
        letter-spacing: 2px;
      }

      .sidebar .counter-label {
        font-size: 10px;
        color: #666;
        text-align: center;
        margin-top: 4px;
      }

      /* ‚ïê‚ïê‚ïê MAIN CONTENT ‚ïê‚ïê‚ïê */
      .content {
        flex: 1;
        padding: 24px 28px;
        background: #000000;
      }

      .content h2 {
        font-family: Georgia, "Times New Roman", serif;
        font-size: 20px;
        font-weight: 400;
        color: #e0e0e0;
        border-bottom: 2px solid #ff8c00;
        padding-bottom: 6px;
        margin-bottom: 16px;
        margin-top: 28px;
      }

      .content h2:first-child {
        margin-top: 0;
      }

      .content h3 {
        font-size: 14px;
        color: #ff8c00;
        margin-top: 18px;
        margin-bottom: 6px;
      }

      .content p {
        margin-bottom: 12px;
        color: #ccc;
      }

      .content a {
        color: #7ec8e3;
        text-decoration: none;
        cursor: pointer;
      }

      .content a:hover {
        text-decoration: underline;
        color: #aedff7;
      }

      /* Allow text selection everywhere without text cursor */
      h1, h2, h3, h4, h5, h6, p, span, div {
        user-select: auto;
        cursor: default;
        caret-color: transparent;
      }

      /* Links and buttons remain clickable */
      a, button {
        user-select: auto;
        cursor: pointer;
      }

      /* Remove text input cursor globally */
      * {
        caret-color: transparent;
      }

      .content ul {
        margin: 8px 0 16px 20px;
        color: #ccc;
      }

      .content li {
        margin-bottom: 4px;
      }

      .content strong {
        color: #e0e0e0;
      }

      .content em {
        color: #aaa;
        font-style: italic;
      }

      /* ‚îÄ‚îÄ Cards ‚îÄ‚îÄ */
      .xp-card {
        background: #000000;
        border: 1px solid #333;
        border-left: 3px solid #ff8c00;
        padding: 14px 16px;
        margin: 10px 0;
      }

      .xp-card .xp-title {
        font-weight: bold;
        font-size: 14px;
        color: #e0e0e0;
      }

      .xp-card .xp-place {
        color: #7ec8e3;
        font-size: 12px;
        margin-top: 2px;
      }

      .xp-card .xp-date {
        color: #ff8c00;
        font-size: 11px;
        font-weight: bold;
        margin-top: 4px;
      }

      .xp-card .xp-desc {
        color: #999;
        font-size: 12px;
        margin-top: 8px;
        line-height: 1.65;
      }

      /* ‚îÄ‚îÄ Tags ‚îÄ‚îÄ */
      .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin: 8px 0;
      }

      .tag {
        background: #000000;
        border: 1px solid #444;
        color: #7ec8e3;
        font-size: 11px;
        font-weight: bold;
        padding: 3px 10px;
      }

      .tag.primary {
        border-color: #ff8c00;
        color: #ff8c00;
      }

      /* ‚îÄ‚îÄ Project rows ‚îÄ‚îÄ */
      .project-row {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        padding: 8px 0;
        border-bottom: 1px dotted #333;
      }

      .project-row:last-child {
        border-bottom: none;
      }

      .project-name {
        font-weight: bold;
        color: #e0e0e0;
      }

      .project-name a {
        color: #7ec8e3;
      }

      .project-desc {
        color: #999;
        font-size: 12px;
      }

      .project-lang {
        font-size: 11px;
        color: #ff8c00;
        font-weight: bold;
        white-space: nowrap;
      }

      /* ‚îÄ‚îÄ Photo gallery ‚îÄ‚îÄ */
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 12px;
        margin-top: 12px;
      }

      .gallery .photo-card {
        background: #000000;
        border: 1px solid #333;
        overflow: hidden;
      }

      .gallery .photo-card img {
        width: 100%;
        height: auto;
        display: block;
      }

      .gallery .photo-card .photo-info {
        padding: 8px 10px;
        font-size: 12px;
        color: #999;
      }

      /* ‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê */
      .footer {
        background: #000000;
        border-top: 3px solid #000000;
        text-align: center;
        padding: 16px 20px;
        font-size: 11px;
        color: #555;
      }

      .footer a {
        color: #7ec8e3;
        text-decoration: none;
      }

      .footer .separator {
        margin: 8px auto;
        width: 200px;
        height: 1px;
        background: linear-gradient(90deg, transparent, #ff8c00, transparent);
      }

      /* ‚ïê‚ïê‚ïê RESPONSIVE ‚ïê‚ïê‚ïê */
      @media (max-width: 700px) {
        .page {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          border-right: none;
          border-bottom: 1px solid #333;
          display: flex;
          flex-wrap: wrap;
          gap: 16px;
        }
        .sidebar .widget {
          margin-bottom: 8px;
        }
      }
    </style>
  </head>
  <body>
    <div class="banner">
      <h1>ANDREJ <span>SMATANA</span></h1>
    </div>

    <div class="navbar">
      <a href="/" id="nav-home">Home</a>
      <a href="/about" id="nav-about">About / CV</a>
      <div class="theme-toggle">
        <span>Theme</span>
        <div class="toggle-switch" id="theme-toggle-switch"></div>
      </div>
    </div>

    <div class="page">
      <div class="sidebar">
        <div class="widget">
          <div class="widget-title">Quick Info</div>
          <p>üìç Brno, Czechia</p>
          <p>üíº Developer</p>
        </div>

        <div class="widget">
          <div class="widget-title">Links</div>
          <ul class="links-list">
            <li><a href="https://github.com/smatand" target="_blank">GitHub</a></li>
            <li><a href="https://linkedin.com/in/smatand" target="_blank">LinkedIn</a></li>
          </ul>
        </div>


      </div>

      <div class="content">
        <slot />
      </div>
    </div>

    <div class="footer">
      <div class="separator"></div>
      &copy; {year} Andrej Smatana
    </div>

    <script>
      // highlight active nav link
      const path = window.location.pathname.replace(/\/$/, "") || "/";
      document.querySelectorAll(".navbar a").forEach((a) => {
        const href = a.getAttribute("href")?.replace(/\/$/, "") || "/";
        if (href === path) a.classList.add("active");
      });

      // theme toggle functionality
      function initThemeToggle() {
        const themeToggleSwitch = document.getElementById('theme-toggle-switch');
        const themeKey = 'site-theme';
        const savedTheme = localStorage.getItem(themeKey) || 'dark';

        // Set initial state
        document.body.classList.toggle('light-mode', savedTheme === 'light');
        themeToggleSwitch.classList.toggle('active', savedTheme === 'light');

        // Toggle theme on click
        themeToggleSwitch.addEventListener('click', () => {
          const isLightMode = document.body.classList.toggle('light-mode');
          const newTheme = isLightMode ? 'light' : 'dark';
          localStorage.setItem(themeKey, newTheme);
          themeToggleSwitch.classList.toggle('active');
        });
      }

      initThemeToggle();
    </script>
  </body>
</html>
