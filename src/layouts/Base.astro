---
interface Props {
  title: string;
}

const { title } = Astro.props;
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>~smatand - {title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;600&display=swap");

      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        background: linear-gradient(135deg, #0a0a0a 0%, #3d1a2a 50%, #1a0a15 100%);
        background-attachment: fixed;
        color: #e0e0e0;
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        font-size: 16px;
        line-height: 1.7;
        user-select: none;
      }

      /* ‚ïê‚ïê‚ïê TOP BANNER ‚ïê‚ïê‚ïê */
      .banner {
        background: linear-gradient(180deg, #2a1a26 0%, #3d2333 100%);
        border-bottom: 3px solid #3d1a2a;
        text-align: center;
        padding: 28px 20px 22px;
      }

      .banner h1 {
        font-family: Georgia, "Times New Roman", serif;
        font-size: 32px;
        font-weight: 400;
        color: #e0e0e0;
        letter-spacing: 3px;
      }

      .banner h1 span {
        color: #2ecc71;
      }

      .banner .tagline {
        font-size: 11px;
        color: #888;
        margin-top: 6px;
        letter-spacing: 1px;
        text-transform: uppercase;
      }

      /* ‚ïê‚ïê‚ïê NAVIGATION ‚ïê‚ïê‚ïê */
      .navbar {
        background: #2a1a26;
        border-bottom: 1px solid #333;
        padding: 0;
        display: flex;
        justify-content: center;
      }

      .navbar a {
        display: inline-block;
        padding: 10px 24px;
        color: #aaa;
        text-decoration: none;
        font-size: 12px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-right: 1px solid #333;
        transition: background 0.2s, color 0.2s;
      }

      .navbar a:first-child {
        border-left: 1px solid #333;
      }

      .navbar a:hover,
      .navbar a.active {
        background: #2ecc71;
        color: #fff;
      }

      /* ‚ïê‚ïê‚ïê LAYOUT: sidebar + content ‚ïê‚ïê‚ïê */
      .page {
        max-width: 960px;
        margin: 0 auto;
        display: flex;
        gap: 0;
        min-height: 70vh;
      }

      /* ‚ïê‚ïê‚ïê SIDEBAR ‚ïê‚ïê‚ïê */
      .sidebar {
        width: 200px;
        flex-shrink: 0;
        background: #2a1a26;
        border-right: 1px solid #333;
        padding: 20px 16px;
        font-size: 12px;
      }

      .sidebar .widget {
        margin-bottom: 24px;
      }

      .sidebar .widget-title {
        font-size: 10px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: #2ecc71;
        border-bottom: 1px solid #333;
        padding-bottom: 6px;
        margin-bottom: 10px;
        font-weight: bold;
      }

      .sidebar .widget p {
        color: #999;
        line-height: 1.6;
      }

      .sidebar .widget a {
        color: #7ec8e3;
        text-decoration: none;
      }

      .sidebar .widget a:hover {
        text-decoration: underline;
      }

      .sidebar .links-list {
        list-style: none;
      }

      .sidebar .links-list li {
        padding: 3px 0;
      }

      .sidebar .links-list a {
        color: #7ec8e3;
        text-decoration: none;
        font-size: 12px;
      }

      .sidebar .links-list a:hover {
        color: #2ecc71;
      }

      .sidebar .links-list a::before {
        content: "¬ª ";
        color: #555;
      }

      .sidebar .counter-box {
        background: #111;
        border: 1px solid #333;
        padding: 8px;
        text-align: center;
        color: #2ecc71;
        font-family: "Courier New", monospace;
        font-size: 14px;
        font-weight: bold;
        letter-spacing: 2px;
      }

      .sidebar .counter-label {
        font-size: 10px;
        color: #666;
        text-align: center;
        margin-top: 4px;
      }

      /* ‚ïê‚ïê‚ïê MAIN CONTENT ‚ïê‚ïê‚ïê */
      .content {
        flex: 1;
        padding: 24px 28px;
        background: #1a0a15;
      }

      .content h2 {
        font-family: Georgia, "Times New Roman", serif;
        font-size: 20px;
        font-weight: 400;
        color: #e0e0e0;
        border-bottom: 2px solid #2ecc71;
        padding-bottom: 6px;
        margin-bottom: 16px;
        margin-top: 28px;
      }

      .content h2:first-child {
        margin-top: 0;
      }

      .content h3 {
        font-size: 14px;
        color: #2ecc71;
        margin-top: 18px;
        margin-bottom: 6px;
      }

      .content p {
        margin-bottom: 12px;
        color: #ccc;
      }

      .content a {
        color: #7ec8e3;
        text-decoration: none;
        cursor: pointer;
      }

      .content a:hover {
        text-decoration: underline;
        color: #aedff7;
      }

      /* Remove text cursor from non-interactive elements */
      h1, h2, h3, h4, h5, h6, p, span, div {
        user-select: none;
        cursor: default;
      }

      /* Allow text selection only on links and text content */
      a, button {
        user-select: auto;
        cursor: pointer;
      }

      .content ul {
        margin: 8px 0 16px 20px;
        color: #ccc;
      }

      .content li {
        margin-bottom: 4px;
      }

      .content strong {
        color: #e0e0e0;
      }

      .content em {
        color: #aaa;
        font-style: italic;
      }

      /* ‚îÄ‚îÄ Cards ‚îÄ‚îÄ */
      .xp-card {
        background: #2a1a26;
        border: 1px solid #333;
        border-left: 3px solid #2ecc71;
        padding: 14px 16px;
        margin: 10px 0;
      }

      .xp-card .xp-title {
        font-weight: bold;
        font-size: 14px;
        color: #e0e0e0;
      }

      .xp-card .xp-place {
        color: #7ec8e3;
        font-size: 12px;
        margin-top: 2px;
      }

      .xp-card .xp-date {
        color: #2ecc71;
        font-size: 11px;
        font-weight: bold;
        margin-top: 4px;
      }

      .xp-card .xp-desc {
        color: #999;
        font-size: 12px;
        margin-top: 8px;
        line-height: 1.65;
      }

      /* ‚îÄ‚îÄ Tags ‚îÄ‚îÄ */
      .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin: 8px 0;
      }

      .tag {
        background: #2a1a26;
        border: 1px solid #444;
        color: #7ec8e3;
        font-size: 11px;
        font-weight: bold;
        padding: 3px 10px;
      }

      .tag.primary {
        border-color: #2ecc71;
        color: #2ecc71;
      }

      /* ‚îÄ‚îÄ Project rows ‚îÄ‚îÄ */
      .project-row {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        padding: 8px 0;
        border-bottom: 1px dotted #333;
      }

      .project-row:last-child {
        border-bottom: none;
      }

      .project-name {
        font-weight: bold;
        color: #e0e0e0;
      }

      .project-name a {
        color: #7ec8e3;
      }

      .project-desc {
        color: #999;
        font-size: 12px;
      }

      .project-lang {
        font-size: 11px;
        color: #2ecc71;
        font-weight: bold;
        white-space: nowrap;
      }

      /* ‚îÄ‚îÄ Photo gallery ‚îÄ‚îÄ */
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 12px;
        margin-top: 12px;
      }

      .gallery .photo-card {
        background: #2a1a26;
        border: 1px solid #333;
        overflow: hidden;
      }

      .gallery .photo-card img {
        width: 100%;
        height: auto;
        display: block;
      }

      .gallery .photo-card .photo-info {
        padding: 8px 10px;
        font-size: 12px;
        color: #999;
      }

      /* ‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê */
      .footer {
        background: #2a1a26;
        border-top: 3px solid #3d1a2a;
        text-align: center;
        padding: 16px 20px;
        font-size: 11px;
        color: #555;
      }

      .footer a {
        color: #7ec8e3;
        text-decoration: none;
      }

      .footer .separator {
        margin: 8px auto;
        width: 200px;
        height: 1px;
        background: linear-gradient(90deg, transparent, #2ecc71, transparent);
      }

      /* ‚ïê‚ïê‚ïê RESPONSIVE ‚ïê‚ïê‚ïê */
      @media (max-width: 700px) {
        .page {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          border-right: none;
          border-bottom: 1px solid #333;
          display: flex;
          flex-wrap: wrap;
          gap: 16px;
        }
        .sidebar .widget {
          margin-bottom: 8px;
        }
      }
    </style>
  </head>
  <body>
    <div class="banner">
      <h1>Andrej <span>Smatana</span></h1>
      <div class="tagline">software developer ¬∑ sysadmin ¬∑ analog photographer</div>
    </div>

    <div class="navbar">
      <a href="/" id="nav-home">Home</a>
      <a href="/about" id="nav-about">About / CV</a>
    </div>

    <div class="page">
      <div class="sidebar">
        <div class="widget">
          <div class="widget-title">Quick Info</div>
          <p>üìç Brno, Czechia</p>
          <p>üéì MSc student</p>
          <p>üíº Sysadmin</p>
        </div>

        <div class="widget">
          <div class="widget-title">Links</div>
          <ul class="links-list">
            <li><a href="https://github.com/smatand" target="_blank">GitHub</a></li>
            <li><a href="https://linkedin.com/in/smatand" target="_blank">LinkedIn</a></li>
          </ul>
        </div>


        <div class="widget">
          <div class="counter-box">004,217</div>
          <div class="counter-label">visitors since 2025</div>
        </div>
      </div>

      <div class="content">
        <slot />
      </div>
    </div>

    <div class="footer">
      <div class="separator"></div>
      &copy; {year} Andrej Smatana ¬∑ est. 2025
      <br />
      best viewed at 1024x768
    </div>

    <script>
      // highlight active nav link
      const path = window.location.pathname.replace(/\/$/, "") || "/";
      document.querySelectorAll(".navbar a").forEach((a) => {
        const href = a.getAttribute("href")?.replace(/\/$/, "") || "/";
        if (href === path) a.classList.add("active");
      });
    </script>
  </body>
</html>
